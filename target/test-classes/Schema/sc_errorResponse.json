{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "success": {
      "type": "boolean",
      "enum": [false]
    },
    "timestamp": {
      "type": "integer",
      "minimum": 0
    },
    "data": {
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "status": { "type": "string" },
        "message": { "type": "string" },
        "errors": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["code", "status", "message", "errors"]
    }
  },
  "required": ["success", "timestamp"]
}
